//Rewrite to www
Options +FollowSymLinks
RewriteEngine on
RewriteCond %{HTTP_HOST} ^https://aniljaiswar.com/[nc]
RewriteRule ^(.*)$ http://www.https://aniljaiswar.com//$1 [r=301,nc]

//Caching schema
<FilesMatch "\.(jpg|png|ico|css|js)$">
Header set Cache-Control "private, max-age=0"
</FilesMatch>

//Custom 400 errors
ErrorDocument 400 index.html

//Custom 401 errors
ErrorDocument 401 index.html

//Custom 403 errors
ErrorDocument 403 index.html

//Custom 404 errors
ErrorDocument 404 index.html

//Custom 500 errors
ErrorDocument 500 index.html

//Prevent viewing of .htaccess file
<Files .htaccess>
order allow,deny
deny from all
</Files>

//Prevent directory listings
Options All -Indexes
 
